# Serverless RAG Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=eu-west-1
AWS_PROFILE=default

# =============================================================================
# OpenAI API
# =============================================================================
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-

# =============================================================================
# Pinecone (Free Tier: https://pinecone.io)
# =============================================================================
PINECONE_API_KEY=pcak-
PINECONE_INDEX=rag-index

# =============================================================================
# Vector DB Selection
# =============================================================================
# Options: pinecone, pgvector
VECTOR_DB_TYPE=pinecone

# pgvector connection (only if VECTOR_DB_TYPE=pgvector)
# PGVECTOR_CONNECTION=postgresql://user:pass@host:5432/dbname

# =============================================================================
# Lambda Configuration
# =============================================================================
DOCUMENTS_BUCKET=serverless-rag-docs-dev
EMBEDDING_QUEUE_URL=https://sqs.eu-west-1.amazonaws.com/xxx/embedding-queue
METADATA_TABLE=rag-metadata-dev
CACHE_TABLE=rag-cache-dev

# =============================================================================
# Model Settings
# =============================================================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536
LLM_MODEL=gpt-4o-mini

# =============================================================================
# RAG Settings
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=5
SIMILARITY_THRESHOLD=0.7
CACHE_ENABLED=true
CACHE_TTL=3600
